<?xml version="1.0"?>
<launch>
  <arg name="veh" default="wamv"/>
  <arg name="veh1" default="wamv"/>
  <arg name="num" default="7"/>

  <!-- Joystick Driver -->
  <node pkg="joy" type="joy_node" name="joy">
    <param name="dev" value="/dev/input/js0"/>
    <!-- <param name="autorepeat_rate" type="double" value="10.0" />  -->
  </node>

  <!-- Joystick Teleop -->
  <!-- <rosparam file="$(find vrx_gazebo)/config/diffdrive.yaml" command="load"/>
  <node pkg="joy_teleop" type="joy_teleop.py" name="joy_teleop">
    <remap from="joy" to="/wamv/joy" />
    <remap from="cmd_vel" to="/wamv/cmd_vel" />
  </node> -->

  <!-- Convert Twist messages to Drive messages -->
  <group ns="$(arg veh)6" >
    <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
      <remap from="left_cmd" to="/$(arg veh1)6/thrusters/left_thrust_cmd"/>
      <remap from="right_cmd" to="/$(arg veh1)6/thrusters/right_thrust_cmd"/>
      <remap from="left_lateral_cmd" to="/$(arg veh1)6/thrusters/left_lateral_thrust_cmd"/>
      <remap from="right_lateral_cmd" to="/$(arg veh1)6/thrusters/right_lateral_thrust_cmd"/>
    </node>
  </group>

  <group ns="$(arg veh)" if="$(eval arg('num') - 1 > 0)">
    <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
      <remap from="left_cmd" to="/$(arg veh1)/thrusters/left_thrust_cmd"/>
      <remap from="right_cmd" to="/$(arg veh1)/thrusters/right_thrust_cmd"/>
      <remap from="left_lateral_cmd" to="/$(arg veh1)/thrusters/left_lateral_thrust_cmd"/>
      <remap from="right_lateral_cmd" to="/$(arg veh1)/thrusters/right_lateral_thrust_cmd"/>
    </node>
  </group>

    <group ns="$(arg veh)1" if="$(eval arg('num') - 2 > 0)">
      <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
        <remap from="left_cmd" to="/$(arg veh1)1/thrusters/left_thrust_cmd"/>
        <remap from="right_cmd" to="/$(arg veh1)1/thrusters/right_thrust_cmd"/>
        <remap from="left_lateral_cmd" to="/$(arg veh1)1/thrusters/left_lateral_thrust_cmd"/>
        <remap from="right_lateral_cmd" to="/$(arg veh1)1/thrusters/right_lateral_thrust_cmd"/>
      </node>
    </group>

    <group ns="$(arg veh)2" if="$(eval arg('num') - 3 > 0)">
      <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
        <remap from="left_cmd" to="/$(arg veh1)2/thrusters/left_thrust_cmd"/>
        <remap from="right_cmd" to="/$(arg veh1)2/thrusters/right_thrust_cmd"/>
        <remap from="left_lateral_cmd" to="/$(arg veh1)2/thrusters/left_lateral_thrust_cmd"/>
        <remap from="right_lateral_cmd" to="/$(arg veh1)2/thrusters/right_lateral_thrust_cmd"/>
      </node>
    </group>

    <group ns="$(arg veh)3" if="$(eval arg('num') - 4 > 0)">
      <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
        <remap from="left_cmd" to="/$(arg veh1)3/thrusters/left_thrust_cmd"/>
        <remap from="right_cmd" to="/$(arg veh1)3/thrusters/right_thrust_cmd"/>
        <remap from="left_lateral_cmd" to="/$(arg veh1)3/thrusters/left_lateral_thrust_cmd"/>
        <remap from="right_lateral_cmd" to="/$(arg veh1)3/thrusters/right_lateral_thrust_cmd"/>
      </node>
    </group>

    <group ns="$(arg veh)4" if="$(eval arg('num') - 5 > 0)">
      <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
        <remap from="left_cmd" to="/$(arg veh1)4/thrusters/left_thrust_cmd"/>
        <remap from="right_cmd" to="/$(arg veh1)4/thrusters/right_thrust_cmd"/>
        <remap from="left_lateral_cmd" to="/$(arg veh1)4/thrusters/left_lateral_thrust_cmd"/>
        <remap from="right_lateral_cmd" to="/$(arg veh1)4/thrusters/right_lateral_thrust_cmd"/>
      </node>
    </group>

    <group ns="$(arg veh)5" if="$(eval arg('num') - 6 > 0)">
      <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
        <remap from="left_cmd" to="/$(arg veh1)5/thrusters/left_thrust_cmd"/>
        <remap from="right_cmd" to="/$(arg veh1)5/thrusters/right_thrust_cmd"/>
        <remap from="left_lateral_cmd" to="/$(arg veh1)5/thrusters/left_lateral_thrust_cmd"/>
        <remap from="right_lateral_cmd" to="/$(arg veh1)5/thrusters/right_lateral_thrust_cmd"/>
      </node>
    </group>
</launch>
